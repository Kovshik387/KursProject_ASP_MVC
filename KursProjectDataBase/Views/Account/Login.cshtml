@model DataBaseModel.Entity.Authorization

<form method="post">
    <fieldset>
        <legend>Авторизация</legend>

        <div class="form-group">
            <label class="col-md-4 control-label" for="login">Логин</label>
            <div class="col-md-4">
                <input class="form-control input-md" asp-for="Loginuser" class="form-control" type="text" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label" for="password">Пароль</label>
            <div class="col-md-4">
                <input class="form-control input-md" asp-for="Passworduser" class="form-control" type="password" />
            </div>
        </div>

        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label class="col-md-4 control-label" for="singlebutton"></label>
            <div class="col-md-4">
                <input type="submit" value="Войти" class="btn btn-primary"/>
            </div>
        </div>

        <div class="form-group">
            <span asp-validation-for="Loginuser" />
        </div>



        <div class="form-group">
            <a asp-area="" asp-controller="Account" asp-action="Register">Создать профиль</a>
        </div>
        
        

    </fieldset>
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

@section Scripts{
    @{await Html.RenderPartialAsync("_ViewScripts.cshtml");}
}