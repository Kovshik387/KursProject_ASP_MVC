@model DataBaseModel.ViewEntity.UserView
@{
    char mail = '@';
}
<form method="post">
    <fieldset>

        <!-- Form Name -->
        <legend>Регистрация</legend>
        <div class="col-6">

        <form asp-controller="Account" asp-action="Register">
            <!-- Text input-->
            <div class="form-group w-100">
                <label class="col-md-4 control-label">Login</label>
                <div class="col-md-4">
                    <input class="form-control input-md" asp-for="Loginuser" class="form-control" type="text"/>
                </div>
            </div>

            <!-- Text input-->
                <div class="form-group w-100">
                <label class="col-md-4 control-label">Password</label>
                <div class="col-md-4">
                    <input class="form-control input-md" asp-for="Passworduser" class="form-control" type="text" />
                </div>
            </div>

            <!-- Text input-->
                <div class="form-group w-100">
                <label class="col-md-4 control-label">Имя</label>
                <div class="col-md-4">
                    <input class="form-control input-md" asp-for="Name" class="form-control" type="text" />
                </div>
            </div>

            <!-- Text input-->
                <label class="col-md-4 control-label">Фамилия</label>
                <div class="col-md-4">
                    <input class="form-control input-md" asp-for="Surname" class="form-control" type="text" />
                </div>

            <label class="col-md-4 w-50 control-label">Контактные данные</label>
                <div class="input-group md-4 w-50">
                    <span class="input-group-text" id="basic-addon1">@mail</span>
                    <input class="form-control input-md " asp-for="Contact" class="form-control" type="text" />
                </div>

            <!-- Select Basic -->
                <div class="form-group w-100">
                <label class="col-md-4 control-label" for="selectbasic">Пол</label>
                <div class="col-md-4">
                    <select asp-for="Sex" class="form-control">
                        <option value="М">Мужской</option>
                        <option value="Ж">Женский</option>
                    </select>
                </div>
            </div>

            <!-- Select Basic -->
                <div class="form-group w-100">
                <label class="col-md-4 control-label" for="selectbasic">Тип</label>
                <div class="col-md-4">
                    <select asp-for="TypeUser" class="form-control">
                        <option value="1">Съёмщик</option>
                        <option value="2">Арендодатель</option>
                    </select>
                </div>
            </div>

            <div asp-validation-summary="ModelOnly"></div>

            <!-- Button -->
            <div class="">
                <label class="col-md-4 control-label" for="singlebutton"></label>
                <div class="col-md-4">
                    <input type="submit" value="Создать" class="btn btn-primary" />
                </div>
            </div>
        </form>
        </div>

    </fieldset>
</form>
