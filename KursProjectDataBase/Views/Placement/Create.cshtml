@model DataBaseModel.ViewEntity.PlacementView

<form method="post">
    <fieldset>

        <!-- Form Name -->
        <legend>Размещение</legend>

        <form asp-controller="Account" asp-action="Register">
            <!-- Text input-->

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label">Этаж</label>
                <div class="col-md-4">
                    <input class="form-control input-md" asp-for="Floor" class="form-control" type="number" min="1" max="20" />
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label">Площадь м2</label>
                <div class="col-md-4">
                    <input class="form-control input-md" asp-for="Square" class="form-control" type="number" min="1" max="1000" />
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label">Количество комнат</label>
                <div class="col-md-4">
                    <input class="form-control input-md" asp-for="Room" class="form-control" type="number" min="1" max="7" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label">Район</label>
                <div class="col-md-4">
                    <input class="form-control input-md" asp-for="Area" class="form-control" type="text" />
                </div>
            </div>


            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label">Улица</label>
                <div class="col-md-4">
                    <input class="form-control input-md" asp-for="Street" class="form-control" type="text" />
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label">Номер</label>
                <div class="col-md-4">
                    <input class="form-control input-md" asp-for="Number" class="form-control" type="number" min="1" max="20" />
                </div>
            </div>

            <!-- Select Basic -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="selectbasic">Пол</label>
                <div class="col-md-4">
                    <select asp-for="IdType" class="form-control">
                        <option value="1">Квартира</option>
                        <option value="2">Дом</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label">Оплата в месяц</label>
                <div class="col-md-4">
                    <input class="form-control input-md" asp-for="Size" class="form-control" type="number" min="1" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label">Описание</label>
                <div class="col-md-4">
                    <input class="form-control input-md" asp-for="Description" class="form-control" type="text"/>
                </div>
            </div>
            
            <!-- Button -->
            <div class="">
                <label class="col-md-4 control-label" for="singlebutton"></label>
                <div class="col-md-4">
                    <input type="submit" value="Создать" />
                </div>
            </div>
        </form>


    </fieldset>
</form>
