@model IQueryable<DataBaseModel.Entity.Contract>
@{
    KursProjectDataBase.Helpers.HashHelper helper = new KursProjectDataBase.Helpers.HashHelper();
}

<p style="margin-right: 0px">
    @if (Model.Count() != 0)
    {
        <header>Объявления</header>
        <table class="table ">
            <thead>
                <tr>
                    <th scope="auto">Этаж</th>
                    <th>Площадь м2</th>
                    <th>Кол-во комнат</th>
                    <th>Район</th>
                    <th>Улица</th>
                    <th>Номер</th>
                    <th>Тип помещения</th>
                    <th>Оплата в месяц</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.IdSNavigation.IdT != null) continue;
                    <tr>
                        <td>@item.IdPNavigation.Floor</td>
                        <td>@item.IdPNavigation.Square</td>
                        <td>@item.IdPNavigation.Room</td>
                        <td>@item.IdPNavigation.Area</td>
                        <td>@item.IdPNavigation.Street</td>
                        <td>@item.IdPNavigation.Number</td>
                        <td>@item.IdPNavigation.IdTypeNavigation.Type</td>
                        <td>@item.Paymentsize</td>
                        <td>
                            <a input type"sumbit" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdC">Изменить</a>
                            <a input type"sumbit" class="btn btn-primary" asp-action="Delete" asp-route-id="@item.IdC">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h3>
            У вас нет активный объявлений
        </h3>
    }
</p>
